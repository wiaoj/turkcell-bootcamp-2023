@{
    @model CourseDisplayResponse;
}

<div class="card">
    <img src="@Model.ImageUrl" class="img-fluid" />
    <div class="card-body">
        <h4 class="card-title">
            @Model.Title
        </h4>
        <p class="card-text">
            @Model.Description
        </p>
        <p class="card-text">
            @Model.Price
        </p>
        <button class="btn btn-success float-end basket" data-id="@Model.Id">Sepete Ekle</button>
    </div>
</div>